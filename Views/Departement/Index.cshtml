@model IEnumerable<HRMS.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container" style="margin-top: 100px;">
    <div class="d-flex">
        <!-- Inclusion de la View Partial pour le Sidebar -->
        @await Html.PartialAsync("_Sidebar")

        <div class="flex-grow-1 p-3 border rounded">
            <h3 class="mb-3 titleColor">Liste de tout Département</h3>
            <div class="department-cards-container">
                @foreach (var department in Model)
                {
                    <div class="department-card   ">
                        <!-- Image à gauche -->
                        <div class="d-flex">
                            <div class="department-card-image" style="flex-shrink: 0; margin-right: 15px;">
                                <img src="https://odooskills.com/_media/img/large/applicationsee.png" alt="Department Image"
                                    class="img-fluid rounded" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>

                            <!-- Contenu de la carte -->
                            <div class="card-content">
                                <h3 class="card-title">@department.Name</h3>
                                <p class="card-description">@department.Description</p>
                            </div>
                        </div>
                        <div class="btnDetails">
                            <button>Voir detail</button>
                        </div>
                    </div>

                }
            </div>

        </div>
    </div>
</div>
